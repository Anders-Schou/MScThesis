{
    "id": "094",
    "seed": 1234,
    "description": "Airy-net",

    "io": {
        "base_dir": "/zhome/e8/9/147091/MSc/experiments/12",
        "figure_dir": "/zhome/e8/9/147091/MSc/experiments/12/figures",
        "model_dir": "/zhome/e8/9/147091/MSc/experiments/12/models",
        "image_dir": "/zhome/e8/9/147091/MSc/experiments/12/images",
        "log_dir": "/zhome/e8/9/147091/MSc/experiments/12/logs"
    },

    "geometry": {
        "domain": {
            "rectangle": { "xlim": [-10.0, 10.0], "ylim": [-10.0, 10.0] },
            "circle": { "center": [0.0, 0.0], "radius": 2.0 },
            "type": "quarter-1"
        }
    },

    "run": {
        "train": {
            "sampling": {
                "coll": [900, 100],
                "rect": [100, 100, 100, 100],
                "circ": 100,
                "data": [0, 50],
                "separate_coll": true
            },
            "iterations": 50000,
            "loss_fn": "2",
            "optimizer": "adam",
            "update_scheme": "gradnorm",
            "update_kwargs": {
                "softadapt": {
                    "order": 1,
                    "beta": 0.1,
                    "loss_weighted": true,
                    "normalized": true,
                    "update_every": 1000,
                    "running_average": 0.9
                },
                "gradnorm": {
                    "normalized": true,
                    "update_every": 1000,
                    "running_average": 0.9
                },
                "unweighted": {
                    "normalized": true
                },
                "weighted": {
                    "weights": [5, 5, 5, 5, 1, 1, 1, 1, 50, 5, 5, 1],
                    "normalized": true
                }
            },
            "learning_rate": 5e-3,
            "batch_size": null,
            "decay_rate": 0.9,
            "decay_steps": 2000,
            "transfer_learning": false,
            "resampling": {
                "do_resampling": false,
                "resample_steps": 10000,
                "resample_num": [1000, 200],
                "loss_emphasis": 2,
                "replace": true
            },
            "jitted_update": true
        },
        "eval": {
            "error_metric": "L2-rel",
            "transfer_learning": false,
            "sampling": {
                "coll": [200, 200],
                "rect": [50, 50, 50, 50],
                "circ": 100,
                "data": [50, 10]
            }
        }
    },

    "model": {
        "pinn": {
            "network": [
                {
                    "architecture": "mlp",
                    "specifications": {
                        "input_dim": 2,
                        "output_dim": 1,
                        "hidden_dims": [32, 32],
                        "activation": "tanh",
                        "initialization": "glorot_normal",
                        "embed": 64
                    }
                }
            ]
        }
    },

    "plotting": {
        "sampling": {
            "do_plots": true,
            "plot_every": null,
            "overwrite": false,
            "file_extension": "png",
            "kwargs": {
                "coll": {
                    "color": "blue",
                    "s": 5
                },
                "coll_extra": {
                    "color": "magenta",
                    "s": 5
                },
                "rect": {
                    "color": "green",
                    "s": 5
                },
                "circ": {
                    "color": "red",
                    "s": 5
                }
            }
        },
        "results": {
            "do_plots": true,
            "plot_every": null,
            "overwrite": false,
            "file_extension": "png"
        },
        "dpi": 75,
        "grid": 201
    },

    "logging": {
        "do_logging": true,
        "log_every": 200,
        "print_every": 100
    }
}